{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Render RMarkdown",
      "type": "shell",
      "command": "Rscript",
      "args": [
        "-e",
        "rmarkdown::render('${file}')"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    }
  ]
}
